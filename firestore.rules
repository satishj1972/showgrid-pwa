rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection (shared with Flutter app)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Dance Studios
    match /dance_studios/{studioId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/dance_studios/$(studioId)).data.ownerId == request.auth.uid;
    }
    
    // Dance Performances
    match /dance_performances/{performanceId} {
      allow read: if resource.data.status == 'approved' || 
        (request.auth != null && resource.data.studioId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.studioIds);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/dance_studios/$(resource.data.studioId)).data.ownerId == request.auth.uid;
    }
    
    // Dance Ratings
    match /dance_ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null && 
        ratingId == request.auth.uid + '_' + request.resource.data.performanceId;
      allow update, delete: if false;
    }
    
    // Dance Challenges
    match /dance_challenges/{challengeId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
